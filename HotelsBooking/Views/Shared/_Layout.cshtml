@using Microsoft.AspNetCore.Identity
@using Infrastructure.Entities
@using System.Security.Claims
@inject UserManager<AppUser> UserManager
@inject SignInManager<AppUser> SignInManager



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelsBooking</title>
    <!-- Font Awesome Icons CSS -->
    <script src="https://kit.fontawesome.com/8e1f1e3db3.js" crossorigin="anonymous"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" asp-append-version="true">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true">
    <!-- animate CSS -->
    <link rel="stylesheet" href="~/css/animate.css" asp-append-version="true">
    <!-- owl carousel CSS -->
    <link rel="stylesheet" href="~/css/owl.carousel.min.css" asp-append-version="true">
    <!-- nice select CSS -->
    <link rel="stylesheet" href="~/css/nice-select.css" asp-append-version="true">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/css/all.css" asp-append-version="true">
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="~/css/flaticon.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/themify-icons.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/lightslider.min.css" asp-append-version="true">
    <!-- font awesome CSS -->
    <link rel="stylesheet" href="~/css/magnific-popup.css" asp-append-version="true">
    <!-- swiper CSS -->
    <link rel="stylesheet" href="~/css/slick.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/price_rangs.css" asp-append-version="true">
    <!-- style CSS -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link href="~/css/rating.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    @if (User.IsInRole("User") || !(SignInManager.IsSignedIn(User)))
    {
        <header class="main_menu home_menu">
            <div class="align-items-center">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg navbar-light">
                        <a asp-controller="Home" asp-action="Index" class="navbar-brand"> <img src="~/img/logo.png" alt="logo"> </a>


                        <div class="collapse navbar-collapse main-menu-item" id="navbarSupportedContent">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a asp-controller="Profile" asp-action="Index" class="nav-link">Profile</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Hotel" asp-action="ShowHotels" class="nav-link">Hotels</a>
                                </li>
                            </ul>
                        </div>
                        @if (!SignInManager.IsSignedIn(User))
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li><a asp-controller="Account" asp-action="Login">Sign In</a></li>
                                <li class="active"><a asp-controller="Account" asp-action="Register">Register</a></li>
                            </ul>
                        }
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                <ul class="nav navbar-nav navbar-right">
                                    <li>
                                        <a asp-area="" asp-controller="Profile" asp-action="Detail" asp-route-id="@UserManager.GetUserId(User)">@UserManager.GetUserName(User)</a>
                                    </li>
                                    <li>
                                        <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
                                    </li>
                                </ul>
                            </form>
                        }
                    </nav>
                </div>
            </div>
        </header>
    }
    <div class="container body-content">
        @RenderBody()
    </div>
    <partial name="_CookieConsentPartial" />

    <!-- jquery plugins here-->
    <script src="~/js/jquery-1.12.1.min.js" asp-append-version="true"></script>
    <!-- popper js -->
    <script src="~/js/popper.min.js" asp-append-version="true"></script>

    <script src="~/js/bootstrap.min.js" asp-append-version="true"></script>

    <script src="~/js/jquery.magnific-popup.js" type="text/javascript" asp-append-version="true"></script>

    <script src="~/js/swiper.min.js" asp-append-version="true"></script>

    <script src="~/js/masonry.pkgd.js" asp-append-version="true"></script>
    <script src="~/js/masonry.pkgd.min.js" asp-append-version="true"></script>

    <script src="~/js/owl.carousel.min.js" asp-append-version="true"></script>

    <script src="~/js/slick.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.counterup.min.js" asp-append-version="true"></script>
    <script src="~/js/waypoints.min.js" asp-append-version="true"></script>
    @*<script src="~/js/contact.js" asp-append-version="true"></script>*@
    <script src="~/js/jquery.ajaxchimp.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.form.js" asp-append-version="true"></script>
    <script src="~/js/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/js/mail-script.js" asp-append-version="true"></script>
    <script src="~/js/stellar.js" asp-append-version="true"></script>
    @*<script src="~/js/price_rangs.js" asp-append-version="true"></script>*@
    <script src="~/js/lightslider.min.js" asp-append-version="true"></script>
    <script src="~/js/custom.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
