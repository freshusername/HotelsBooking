@model HotelsBooking.Models.CreateHotelViewModel;
@{
    ViewData["Title"] = "CreateHotel";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<body>
    <div class="row">

        <div class="col-lg-8 col-lg-offset-2 cl-md-6 cl-md-offset-3">

            <form asp-action="CreateHotel" asp-controller="Admin" method="post">

                <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>

                <div class="form-group">
                    <label class="control-label">Name:</label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label">Location:</label>
                    <input type="text" asp-for="Location" class="form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label">Season:</label>
                    <div style="width:200px; display:block;">
                        <select asp-for="Season">
                            <option value="none" selected disabled hidden>
                                Select an Option
                            </option>
                            <option value="0">Hot</option>
                            <option value="1">Cold</option>
                            <option value="2">Demiseason</option>
                        </select>
                    </div>
                </div>

                <div class="form-group text-center" style="display:block">
                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                </div>
            </form>
        </div>
    </div>
</body>
