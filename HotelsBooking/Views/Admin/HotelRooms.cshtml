@model IEnumerable<HotelsBooking.Models.HotelRoomsViewModel>
<link href="~/css/Admin.css" rel="stylesheet" />
<link href="~/css/ForTable.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<body>
    <div id="viewport">
        @await Html.PartialAsync("_AdminPartial")
        <div id="content" class="no-margin-top">
            <div class="row">
                <table class="table table-striped table-dark">
                    <thead>
                        <tr><th>List of Rooms</th><th></th><th></th><th></th></tr>
                        <tr><th data-breakpoints="mobile">Number</th><th data-breakpoints="mobile tablet">Price</th><th data-breakpoints="mobile tablet">Type</th><th data-breakpoints="mobile tablet">Actions</th></tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr><th colspan="4">No Rooms</th></tr>
                        }
                        else
                        {
                            @foreach (var room in Model)
                            {
                                <tr>
                                    <td data-label="Number">@Math.Round(room.Price, 2)</td>
                                    <td data-label="Price">@Math.Round(room.Price,2)</td>
                                    <td data-label="Type">@room.Type</td>
                                    <td data-label="Actions">
                                        <form asp-action="DeleteHotelRoom" asp-controller="Admin">
                                            <a class="btn btn-sm btn-warning" asp-action="EditHotelRoom" asp-route-id="@room.Id">Edit</a>
                                            <button type="submit" class="btn btn-sm btn-danger" asp-action="DeleteHotelConv" asp-route-id="@room.Id" asp-route-HotelId="@room.HotelId">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="button-center">
                    <a asp-action="CreateHotelConv" class="btn btn-success" asp-route-id="@ViewContext.RouteData.Values["Id"]">Add new hotel room</a>
                </div>
            </div>
        </div>
    </div>
</body>
