@model HotelsBooking.Models.EditOrderDetailsViewModel;
@{
    ViewData["Title"] = "Edit Order Details";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<body>
    <div class="row">

        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
            <div class="text-center">
                <label style="font-size:20px">Edit order details: @Model.Id</label>
            </div>
            <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" value="@Model.Id" />
            </div>
            <form asp-action="EditOrderDetails" asp-controller="Admin" method="post">
                <div class="form-group">
                    <label class="control-label">Check-in date:</label>
                    <input type="text" asp-for="CheckInDate" class="form-control" value="@Model.CheckInDate" />
                </div>

                <div class="form-group">
                    <label class="control-label">Check-out date:</label>
                    <input type="text" asp-for="CheckOutDate" class="form-control" value="@Model.CheckOutDate" />
                </div>

                <div class="form-group">
                    <label class="control-label">Hotel:</label>
                    <input type="text" asp-for="HotelName" class="form-control" value="@Model.HotelName" />
                </div>

                <div class="form-group">
                    <label class="control-label">Room:</label>
                    <input type="text" asp-for="RoomId" class="form-control" value="@Model.RoomId" />
                </div>

                <div class="form-group">
                    <label class="control-label">Total Price:</label>
                    <input type="text" asp-for="TotalPrice" class="form-control" value="@Model.TotalPrice" />
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                </div>
            </form>
        </div>
    </div>
</body> 