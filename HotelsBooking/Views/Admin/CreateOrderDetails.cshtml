@model HotelsBooking.Models.CreateOrEditOrderDetailsViewModel;
@{
    ViewData["Title"] = "Add Order Details";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<body>
    <div class="row">

        <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-12">
            <div class="text-center">
                <label style="font-size:20px">Add details to order</label>
            </div>
            <form asp-action="CreateOrderDetails" asp-controller="Admin" method="post">

                <div asp-validation-summary="All" class="text-danger text-center" style="margin-top:10px;"></div>

                <div class="form-group">
                    <label class="control-label">Check-in date:</label>
                    <input type="date" asp-for="CheckInDate" class="form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label">Check-out date:</label>
                    <input type="date" asp-for="CheckOutDate" class="form-control" />
                </div>

                <div class="form-group">
                    <label class="control-label">Hotel:</label>
                    <input type="text" asp-for="HotelName" class="form-control" />
                </div>


                <div class="form-group">
                    <label class="control-label">Room:</label>
                    <input type="password" asp-for="RoomId" class="form-control">
                </div>

                <div class="form-group">
                    <label class="control-label">Total price</label>
                    <input type="password" asp-for="TotalPrice" class="form-control">
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-success text-center" style="width:20%" />
                </div>
            </form>
        </div>
    </div>
</body>
