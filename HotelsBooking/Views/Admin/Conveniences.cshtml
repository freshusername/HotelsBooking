@model IEnumerable<HotelsBooking.Models.ConvsViewModel>
<link href="~/css/Admin.css" rel="stylesheet" />
<link href="~/css/ForTable.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<body>
    <div id="viewport">
        @await Html.PartialAsync("_AdminPartial")

        <div id="content">
            <div class="row">
                <p class="text-black-50">List of conveniences</p>
                <table class="table table-dark rwd-table text-center table-hover">
                    <thead class="thead-light  text-center">
                        <tr style="color:black" class="text-center">
                            <th class="text-center">Name</th>
                            <th class="text-center">Hotel</th>
                            <th class="text-center">Room</th>
                            <th class="text-center">Price</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    @if (!Model.Any())
                    {
                        <tr><td colspan="5">No Conveniences</td></tr>
                    }
                    else
                    {

                        @foreach (var conv in Model)
                        {

                            <tr>
                                <td>@conv.Name</td>
                                <td>@conv.HotelName</td>
                                <td>@conv.RoomID</td>
                                <td>@conv.Price</td>
                                <td></td>
                                <td>
                                    <form asp-action="DeleteConv" asp-controller="Admin" asp-route-id="@conv.Id">
                                        <a class="btn btn-sm btn-warning" asp-action="EditConv" asp-route-id="@conv.Id">Edit</a>
                                        <button type="submit" class="btn btn-sm btn-danger" asp-action="DeleteConv" asp-route-id="@conv.Id">Delete</button>
                                    </form>
                                </td>
                            </tr>

                        }
                    }
                </table>
                <div class="text-center">
                    <a asp-action="CreateConv" class="btn btn-success">Add new convenience</a>
                </div>
            </div>
        </div>
    </div>
</body>
